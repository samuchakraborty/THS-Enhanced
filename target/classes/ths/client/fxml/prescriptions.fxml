<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ths.client.ui.PrescriptionsController">

    <!-- Top bar (same as Bookings) -->
    <top>
        <ToolBar>
            <Button text="Dashboard" onAction="#goDashboard"/>
            <Button text="Vitals" onAction="#goVitals"/>
            <Button text="Prescriptions" onAction="#goRx"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Logged in"/>
            <Button text="Logout" onAction="#logout"/>
        </ToolBar>
    </top>

    <!-- Your existing content goes in the center -->
    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Left form -->
            <Label text="Patient ID" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <!--            <TextField fx:id="patientIdField" promptText="P001"
            GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="140"/>-->
            <ComboBox fx:id="patientCombo" prefWidth="220.0" promptText="Select patient"/>


            <Label text="Drug" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="drugField" promptText="DrugA"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Quantity" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="qtyField" promptText="30"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Low-Stock Threshold" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="thresholdField" promptText="10"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <!-- Add & Update -->
            <HBox spacing="8" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <Button fx:id="addBtn"    text="Add"              onAction="#add"        defaultButton="true"/>
                <Button fx:id="updateBtn" text="Update (Set Qty)" onAction="#updateQty"/>
            </HBox>

            <!-- Refill + N -->
            <HBox spacing="8" GridPane.rowIndex="5" GridPane.columnIndex="1">
                <Label text="Refill +"/>
                <TextField fx:id="refillField" promptText="5" prefWidth="60"/>
                <Button fx:id="refillBtn" text="Add" onAction="#refillAdd"/>
            </HBox>

            <!-- Right side: filter, banner, and table -->
            <HBox spacing="8" GridPane.rowIndex="0" GridPane.columnIndex="2">
                <Label text="Filter:"/>
                <TextField fx:id="filterField" promptText="patient or drug" prefWidth="200"/>
            </HBox>

            <Label fx:id="lowStockBanner"
                   text="âš  Some prescriptions are below threshold"
                   style="-fx-background-color: #fff3cd; -fx-text-fill: #7a5a00; -fx-padding: 8; -fx-background-radius: 6;"
                   GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.columnSpan="1"/>

            <TableView fx:id="rxTable"
                       prefWidth="420" prefHeight="280"
                       GridPane.rowIndex="2" GridPane.columnIndex="2" GridPane.rowSpan="4">
                <columns>
                    <TableColumn fx:id="patientCol" text="Patient"   prefWidth="100"/>
                    <TableColumn fx:id="drugCol"    text="Drug"      prefWidth="140"/>
                    <TableColumn fx:id="qtyCol"     text="Qty"       prefWidth="80"/>
                    <TableColumn fx:id="thrCol"     text="Threshold" prefWidth="100"/>
                </columns>
            </TableView>
        </GridPane>
    </center>
</BorderPane>
